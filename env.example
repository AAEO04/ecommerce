# Database Configuration
DATABASE_URL=postgresql://madrush_user:madrush_password@localhost:5432/madrush_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=madrush_user
DATABASE_PASSWORD=madrush_password
DATABASE_NAME=madrush_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=madrush
RABBITMQ_PASSWORD=madrush_password

# Payment Configuration (Paystack)
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYMENT_MODE=production # Set to 'mock' for testing without real payment gateway

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_EMAIL=noreply@madrush.com
NOTIFICATION_MOCK=false # Set to 'true' to mock email and SMS notifications

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Service URLs (for development)
PRODUCT_SERVICE_URL=http://localhost:8001
ADMIN_SERVICE_URL=http://localhost:8002
ORDER_SERVICE_URL=http://localhost:8003
NOTIFICATION_SERVICE_URL=http://localhost:8004

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
VITE_ADMIN_API_URL=http://localhost:8000/api/admin
VITE_PRODUCT_API_URL=http://localhost:8000/api

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256 # Algorithm for JWT signing (e.g., HS256, RS256)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30 # Lifetime of access tokens in minutes
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001 # Comma-separated list of allowed origins
COOKIE_SECURE=true # Set to 'true' for HTTPS, 'false' for HTTP (development)
COOKIE_SAMESITE=strict # 'lax', 'strict', or 'none'
COOKIE_MAX_AGE=1800 # Max age of cookies in seconds

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Development Mode
DEV_MODE=false # Set to 'true' for development specific features (e.g., auto-table creation, admin creation)