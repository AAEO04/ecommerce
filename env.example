# Database Configuration
DATABASE_URL=postgresql://madrush_user:madrush_password@localhost:5432/madrush_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=madrush_user
DATABASE_PASSWORD=madrush_password
DATABASE_NAME=madrush_db
POSTGRES_USER=madrush_user
POSTGRES_PASSWORD=madrush_password
POSTGRES_DB=madrush_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Payment Configuration (Paystack)
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYMENT_MODE=production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_EMAIL=noreply@Madrush.com.ng
NOTIFICATION_MOCK=false

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
COOKIE_MAX_AGE=1800

# Development Mode
DEV_MODE=false
NEXT_PUBLIC_API_URL=http://localhost:8000/api